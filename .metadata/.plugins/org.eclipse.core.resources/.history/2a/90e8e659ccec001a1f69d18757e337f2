package sample1;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		String str ="Carlos Briggs C. Montealto";
		System.out.println("vowels = " + submain(str) + "\n");

	}
	
	public static int submain(String str) {
		int total = 0;
		
		for(int i = 0; i < str.length(); i++) {
			
			if (str.charAt(i) == 'a' || str.charAt(i) == 'e' || str.charAt(i) == 'i' || str.charAt(i) == 'o' || str.charAt(i) == 'u' ) {
				total++;
			}
		}
		
		return total;
	}

}
